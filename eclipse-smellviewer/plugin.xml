<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.ambientsmell"
            name="Ambient Smells">
      </category>
      <view
            category="org.ambientsmell"
            class="org.ambientsmell.views.SmellView"
            icon="icons/sample.gif"
            id="org.ambientsmell.views.SmellView"
            name="Smell Viewer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="org.ambientsmell.views.SmellView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
